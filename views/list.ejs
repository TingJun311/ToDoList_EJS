<!DOCTYPE html>
<html lang="en">
    <%- include("header") -%>
    <body>
        <div class="box" id="heading">
            <h1><%= curDay %></h1>
        </div>
        <div class="box">
            <% for (var i = 0; i < newItem.length; i++) { %>
            <div class="item">
                <input type="checkbox" />
                <p><%= newItem[i] %></p>
            </div>
            <% } %>
            <form class="item" action="/" method="post">
                <input
                    type="text"
                    name="todo"
                    placeholder="New item"
                    autocomplete="off"
                />
                <button type="submit" name="submitBtn" value="<%= curDay %>">
                    +
                </button>
            </form>
        </div>
        <%- include("footer") -%>
    </body>
</html>
